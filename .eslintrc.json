{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0,
        "react/jsx-props-no-spreading": 0,
        "react/require-default-props": 0,
        "react/forbid-prop-types": 0,
        "func-names": 0,
        "default-param-last": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./app/javascript/"]
            },
            "alias": {
                "map": [
                    ["@app", "./app/javascript/"]
                ]
            },
            "extensions": [".js", ".jsx", ".json"]
        }
    }
}
